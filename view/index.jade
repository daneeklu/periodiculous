doctype html
html(lang="en")
  head
    title Periodiculous
    include css.jade
  body
    #container
      h1(data-bind="text: greeting")
      ul(data-bind='foreach: atoms')
        a(href='#' data-bind='click: $parent.atomClicked')
          include _atombox.jade
      ul(data-bind='foreach: atomList')
        li(data-bind='text: $data.name')

    script(src="jspm_packages/system.js", charset="utf-8")
    script(src="config.js", charset="utf-8")
    script(type="text/javascript").
      System.import('js/main.js')
